<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  >
  <ScrollView 
    android:id="@+id/scrollv1"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:layout_width="fill_parent"
    android:fastScrollEnabled="false" 
    android:fillViewport="true"
    android:background="@drawable/rndframe"
    android:layout_margin="3dp"
    android:scrollbars="vertical"
    android:measureAllChildren="true"
    >
    <TextView
      android:id="@+id/textview9mcresult"
      android:textColor="#77DD00"
      android:typeface="monospace"
      android:textSize="16sp"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      />
  </ScrollView>
  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="300dp"
    android:background="@drawable/rndframe"
    android:layout_margin="3dp"
    >
    <android.opengl.GLSurfaceView
      android:id="@+id/glSurfaceViewB"
      android:layout_width="0dip"
      android:layout_weight="1"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      />
  </LinearLayout>
  <ProgressBar
    android:id="@+id/progress1"
    android:indeterminate="false"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    style="@android:style/Widget.ProgressBar.Horizontal"
    />
  <TableLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:shrinkColumns="*"
    android:stretchColumns="*"
    >
    <TableRow
      >
      <Button
	android:id="@+id/button1" 
	android:layout_span="1"
	android:layout_margin="3dp"
	android:text="@string/bs"
	android:textColor="#000000"
	android:textSize="16sp"
	android:background="@drawable/rndbutton"
	/>
      <Button
	android:id="@+id/button3" 
	android:layout_span="1"
	android:layout_margin="3dp"
	android:text="@string/lsm"
	android:textColor="#000000"
	android:textSize="16sp"
	android:background="@drawable/rndbutton"
	><requestFocus/></Button>
      <Button
	android:id="@+id/buttonParameters" 
	android:layout_span="1"
	android:layout_margin="3dp"
	android:text="@string/parameters"
	android:textColor="#000000"
	android:textSize="16sp"
	android:background="@drawable/rndbutton"
	/>
      <Button
	android:id="@+id/buttonCopy" 
	android:layout_span="1"
	android:layout_margin="3dp"
	android:text="@string/copy"
	android:textColor="#000000"
	android:textSize="16sp"
	android:background="@drawable/rndbutton"
	/>
    </TableRow>
    <TableRow
      >
      <Button
	android:id="@+id/buttonSettings" 
	android:layout_span="1"
	android:layout_margin="3dp"
	android:text="@string/settings"
	android:textColor="#000000"
	android:textSize="16sp"
	android:background="@drawable/rndbutton"
	/>
      <Button
	android:id="@+id/buttonClr" 
	android:layout_span="1"
	android:layout_margin="3dp"
	android:text="@string/clr"
	android:textColor="#000000"
	android:textSize="16sp"
	android:background="@drawable/rndbutton"
	/>
      <Button
	android:id="@+id/buttonCancel" 
	android:layout_span="1"
	android:layout_margin="3dp"
	android:text="@string/cancel"
	android:textColor="#000000"
	android:textSize="16sp"
	android:background="@drawable/rndbutton"
	/>
      <Button
	android:id="@+id/buttonHelp" 
	android:layout_span="1"
	android:layout_margin="3dp"
	android:text="@string/help"
	android:textColor="#000000"
	android:textSize="16sp"
	android:background="@drawable/rndbutton"
	/>
    </TableRow>
  </TableLayout>
</LinearLayout>
